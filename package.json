{
  "name": "react-ridge-state",
  "version": "4.2.1",
  "description": "react-ridge-state is a very simple global state management library for React and React Native",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/web-ridge/react-ridge-state",
  "license": "MIT",
  "readme": "README.md",
  "scripts": {
    "mocha": "mocha  -r jsdom-global/register -r ts-node/register tests/**/*.mocha.tsx",
    "jest": "jest --maxWorkers=150",
    "build:tsc": "tsc",
    "build:esm": "npx esbuild ./src/* --outdir=dist/esm --minify --format=esm",
    "build:cjs": "tsc && npx esbuild ./src/* --outdir=dist/cjs --minify --format=cjs",
    "build": "npm run build:tsc && npm run build:esm && npm run build:cjs",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expect.js": "^0.3.1",
    "jest": "^26.6.3",
    "jsdom": "^16.5.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.3.1",
    "mocha-jsdom": "^2.0.0",
    "prettier": "^2.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "esbuild": "^0.9.0"
  }
}
